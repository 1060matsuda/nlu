#################################
#two psrts have to be corrected
#Vacancy >> type : Fe Fe Fe Fe Fe Fe Fe Fe Fe
#Cu      >> type : Fe Fe Fe Fe Fe Fe Fe Fe Fe Cu
#################################
units       metal 
atom_style  atomic
boundary p p p

read_data ./Fe.lat
#timestep 0.1
timestep 0.001
pair_style  eam/alloy
pair_coeff  * * ./FeCuNi.eam.alloy Fe Fe Fe Fe Fe Fe Fe Fe Fe Cu
#pair_coeff  * * ./new_potential/FeCuNi.eam.alloy Fe Fe Fe Fe Cu
#mass        *4 ${mass}
#pair_style  aenet
#pair_coeff  * * v03 Fe 10sw-10sw.nn Fe Fe Fe Fe Fe
#pair_coeff  * * ./new_potential/FeCuNi.eam.alloy Fe Fe Fe Fe Cu
#mass        *4 ${mass}
mass        *9 55.845
mass        10 63.546
#mass        5 58.454 correct value!!!

thermo 1
thermo_style custom step lx ly lz press pxx pyy pzz pe temp

region snapshot block 1500 1700 INF INF 70 270
group snap region snapshot

minimize 1.0e-30 1.0e-30 10000 10000

fix 1 all box/relax aniso 0.0 couple yz vmax 0.01
minimize 1.0e-30 1.0e-30 10000 10000
unfix 1
write_data ./afterboxrelax.cuppt.lat
fix 2 all nve
minimize 1.0e-30 1.0e-30 10000 10000
unfix 2

write_data ./afternvemm.cuppt.lat

#dump myDump snap custom 1 dump.atom id type x y z vx vy vz mass
run 0
quit

quit
# ------------------------- SETTINGS ---------------------------------

######################################
# EQUILIBRATION
reset_timestep	0
timestep 0.001

# Set thermo output
thermo 1000
thermo_style custom step lx ly lz press pxx pyy pzz pe temp
write_data aftermm.lat
# Run for at least 10 picosecond (assuming 1 fs timestep)
unfix 1

# Store final cell length for strain calculations
variable tmp equal "lx"
variable L0 equal ${tmp}
print "Initial Length, L0: ${L0}"

######################################
# DEFORMATION
reset_timestep	0

fix 1 all nve
variable srate equal 1.0e10
variable srate1 equal "v_srate / 1.0e12"
fix		2 all deform 1 x trate ${srate1} units box remap x

# Output strain and stress info to file
# for units metal, pressure is in [bars] = 100 [kPa] = 1/10000 [GPa]
# p2, p3, p4 are in GPa
variable strain equal "ln(lx/v_L0)"
variable p1 equal "v_strain"
variable p2 equal "-pxx/10000"
variable p3 equal "-pyy/10000"
variable p4 equal "-pzz/10000"
fix def1 all print 1 "${p1} ${p2} ${p3} ${p4}" file sscurve.txt screen no

# Use cfg for AtomEye
#dump 		1 all cfg 250 dump.tensile_*.cfg mass type xs ys zs c_csym c_peratom fx fy fz
#dump_modify 1 element Al

# Display thermo
thermo 	1000
thermo_style	custom step v_strain temp v_p2 v_p3 v_p4 ke pe press

run	500	

######################################
# SIMULATION DONE
print "All done"
